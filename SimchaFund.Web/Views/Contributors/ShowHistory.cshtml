@model HistoryViewModel
@using SimchaFund.Data

<div class="header">
    <h3>History for @Model.ContributorName</h3>
    <h3>Current Balance: @Model.TotalBalance.ToString("C")</h3>
    
</div>

<div class="row header">
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <tr>
                <th>Action</th>
                <th>Date</th>
                <th>Amount</th>
            </tr>
            @*@(IEnumerable Deposit depositsSorted=Model.History.Deposits.Sort(d=>d.date)*@
            @foreach (History history in Model.History)
            {
                <tr>
                    <td>
                        @history.Action
                    </td>
                    <td style="text-align: center; vertical-align: middle;">
                        @history.Date.ToShortDateString()
                    </td>
                    <td style="text-align: center; vertical-align: middle;">
                        @(history.IsContribution?"-":"")@history.Amount.ToString("C")
                    </td>
                </tr>
            }
         



        </table>
    </div>
</div>

<div style="text-align:center;">
    <a class="btn-lg btn-danger" href="/contributors">Back to Contributors</a>
</div>